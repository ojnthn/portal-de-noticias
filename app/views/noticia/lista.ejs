<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Notícias</title>
			<%- include('../base/head.ejs') %>
		</head>
	<body>
		<div class="container">
			<h1>Notícias</h1>
			<div class="row">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Título</th>
							<th scope="col">Ação</th>
						</tr>
					</thead>
					<tbody>
						<% for (var i = 0; i < aNoticias.length; i++ ) { %>
							<tr>
								<th scope="row"><%= aNoticias[i].id %></th>
								<td><%= aNoticias[i].titulo %></td>
								<td width="100px">
									<a href="/noticia/<%= aNoticias[i].id %>" class="btn btn-primary">
										Abrir
									</a>
								</td>
							</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>
	</body>
</html>